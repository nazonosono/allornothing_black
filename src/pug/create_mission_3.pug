extends _layout

block vars
  include _config
  - var key = "create_mission_3"
  - var page = pages[key]

block contents
  - var missionNo = 3
  div(id = "content")
    p(id = "create_mission") 文字をタップして入力してください
  div(class = "mission_card")
    li(class = "mission_NO") #{missionNo}
    li(class = "mission_content") ミッション内容
  div(id = "error-message")
  div(id = "input-text")
  button(id = "delete-char", onclick = "deleteChar()" disabled) 取消

  include component/_gozyuonhyo

  button(onclick = "") クリア済一覧
  button(onclick = `createMission(${missionNo})`) 文章仮作成

  // モーダルウィンドウ
  include component/_mask
  include mixin/_modalwindow

  // クリア済単語一覧
  div(id = "cleared_content")
    p(id = "cleared_words_title") クリア済単語一覧
    div(class = "content_box")
      p 単語

  include component/_footerBtn

block script
  script(src=`${jsPath}/create_mission.js`)
