extends _layout

block vars
  include _config
  - var key = "camera"
  - var page = pages[key]

block contents
  include component/_title
  main
    div(class = "description")
      p(class = "content") カメラ
    div(id="loadingMessage") 🎥 カメラにアクセスできません。カメラの使用を許可してください。
    canvas(id="canvas" hidden)
    p ※QRコードを読み取ってください。

  include component/_footerBtn

  include mixin/_modalwindow
  +modalWindow()
    p
      span#obtained_hiragana
      | <br>
      | を追加しました！

block script
  script(src="https://cdn.jsdelivr.net/npm/jsqr@1.4.0/dist/jsQR.min.js")
  script(src=`${jsPath}/${key}.js`)
