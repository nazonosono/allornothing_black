#charCardList
    display flex
    flex-direction column
    width 100%
    writing-mode vertical-rl
    .charCardLine
        display flex
        justify-content space-between
        padding 0
        margin 0
        width 10%
        .charCard
            margin 0.2rem 0.2rem 0.2rem 0.2rem
            width 3.5rem
            height 3.5rem
            & button
                width 100%
                height 100%
                font-size 2.5rem
                font-weight 800
                background-color c-white
                color c-black
                &:disabled
                    background-color c-gray
                    color c-darkgray

.option-button
    display flex
    justify-content space-between
    padding 0 1rem 3rem 1rem
    & button
        padding 0.4rem 0
        width 20%
        height 100%
        background-color c-blue
        color c-white
        &:disabled
            background-color c-gray