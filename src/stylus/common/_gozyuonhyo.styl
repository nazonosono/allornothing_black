#charCardList
    display flex
    flex-direction column
    width 100%
    writing-mode vertical-rl
    margin-bottom 3rem


    .charCardLine
        display flex
        justify-content space-between
        padding 0
        margin 0
        width 10%
        .charCard
            margin 0.5rem 0.5rem
            width 3rem
            height 3rem
            & button
                width 100%
                height 100%
                font-size 1.8rem
                font-weight 800
                background-color c-white
                color c-black
                border 0
                &:disabled
                    background-color c-gray
                    color c-darkgray

.option-button
    display flex
    justify-content space-between
    padding 0 1rem 3rem 1rem
    & button
        padding 0.4rem 0
        border 0
        width 20%
        height 100%
        background-color c-blue
        color c-white
        &:disabled
            background-color c-gray