#charCardList
    display flex
    flex-direction column
    width 100%
    writing-mode vertical-rl
    margin-bottom 3rem
    padding-left 0.5rem
    padding-right 0.5rem
    .charCardLine
        display flex
        justify-content space-between
        padding 0
        margin 0 auto
        .charCard
            margin 0.8rem 0.5rem
            & button
                width 100%
                height 100%
                font-size 1.8rem
                font-weight 800

.option-button
    display flex
    justify-content space-between
    padding 0 1rem 3rem 1rem
    & button
        padding 0.4rem 0
        border 0
        width 20%
        height 100%
        background-color c-blue
        color c-white